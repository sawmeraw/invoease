@model InvoiceListViewModel

@{
    ViewData["Title"] = "Invoices";
}

<section>
    <div>
        <div>
            <h1 class="text-lg md:text-2xl font-semibold">Invoices</h1>
            <div class="mt-4">
                <div>
                    <a href="/invoices/new"
                        class="text-white bg-gray-700 hover:bg-gray-800 hover:outline-1 hover:border-white focus:ring-4 font-medium rounded text-sm px-5 py-2.5 focus:outline-none duration-300">Create
                        New</a>
                    <a href="invoices/export"
                        class="text-white bg-gray-700 hover:bg-gray-800 hover:outline-1 hover:border-white focus:ring-4 font-medium rounded text-sm px-5 py-2.5 focus:outline-none duration-300">Export
                        Data</a>
                </div>
            </div>

            <div class="flex flex-col mt-4 bg-gray-50 rounded drop-shadow-md px-4 py-4">
                <div>
                    <input type="text" placeholder="Search"
                        class="px-1 py-1 bg-gray-200 outline-0 focus:ring-1 focus:ring-blue-500 ">
                </div>
                <div class="mt-4">
                    <table class=" min-w-full divide-y divide-gray-200">
                        <thead class="text-xs uppercase tracking-wider bg-gray-200">
                            <tr class="text-gray-600">
                                <th scope="col" class="py-2 px-2 font-semibold">
                                    Invoice Number
                                </th>
                                <th scope="col" class="py-2 px-2 font-semibold">
                                    Client
                                </th>
                                <th scope="col" class="py-2 px-2 font-semibold">
                                    Amount
                                </th>
                                <th scope="col" class="py-2 px-2 font-semibold">
                                    Issue Date
                                </th>
                                <th scope="col" class="py-2 px-2 font-semibold">
                                    Due Date
                                </th>
                                <th scope="col" class="py-2 px-2 font-semibold">
                                    Status
                                </th>
                                <th scope="col" class="py-2 px-2 font-semibold">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-x divide-black">
                            @{
                                foreach (var invoice in Model.invoices)
                                {
                                    <tr>
                                        <td class="px-2 py-4">
                                            @invoice.InvoiceNumber
                                        </td>
                                        <td>
                                            @invoice.ClientName
                                        </td>
                                        <td>
                                            @invoice.CreatedDate
                                        </td>
                                        <td>
                                            @invoice.DueDate
                                        </td>
                                        <td>
                                            @invoice.IsDraft || @invoice.IsPaid || @invoice.IsScheduled
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <div>

    </div>

</section>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] | Invoease</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body class="flex flex-col min-h-screen">
    <header class="bg-gray-800 text-white">
        <nav class="container mx-auto flex justify-between items-center py-4">
            <div class="flex">
                <div class="flex items-center">
                    <a href="/" class="cursor-pointer px-5 py-2.5">
                        <p class="font-semibold text-lg">Invo<span class="uppercase">Ease</span></p>
                    </a>

                </div>
            </div>
            <div class="flex justify-between items-center space-x-4">
                <a href="/profile"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 duration-300">Profile
                </a>
                <a href="/logout"
                    class="text-white bg-gray-700 hover:bg-gray-800 hover:outline-1 hover:border-white focus:ring-4 font-medium rounded text-sm px-5 py-2.5 focus:outline-none duration-300">Logout
                </a>

            </div>
        </nav>
    </header>
    <div class="flex-grow">
        <main role="main" class="py-4 container mx-auto">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800 py-4 text-white">
        <div class="container mx-auto">
            <div>
                @{
                    int year = DateTime.Now.Year;
                }
                <p>@year InvoEASE. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
</body>

</html>
